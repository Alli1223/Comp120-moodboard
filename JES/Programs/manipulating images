def posterize(picture):
#loop through the pixels
  for p in getPixels(picture):
#get the RGB values
    red = getRed(p)
    green = getGreen(p)
    blue = getBlue(p)
#check and set red values
    if(red < 64):
      setRed(p, 31)
    if(red > 63 and red < 128):
      setRed(p, 95)
    if(red > 127 and red < 192):
      setRed(p, 159)
    if(red > 191 and red < 256):
      setRed(p, 223)
#check and set green values
  if(green < 64):
    setGreen(p, 31)
  if(green > 63 and green < 128):
    setGreen(p, 95)
  if(green > 127 and green < 192):
    setGreen(p, 159)
  if(green > 191 and green < 256):
    setGreen(p, 223)
#check and set blue values
  if(blue < 64):
    setBlue(p, 31)
  if(blue > 63 and blue < 128):
    setBlue(p, 95)
  if(blue > 127 and blue < 192):
    setBlue(p, 159)
  if(blue > 191 and blue < 256):
    setBlue(p, 223)


def grayPosterize(picture):
  for p in getPixels(picture):
    r = getRed(p)
    g = getGreen(p)
    b = getBlue(p)
  luminance = (r+g+b)/3
  if luminance < 64:
    setColor(p,black)
  if luminance >= 64:
    setColor(p,white)
  print luminance

def edgedetection():
  file=pickAFile()
  picture=makePicture(file)
  
  for px in getPixels(picture):
    x = getX(px)
    y = getY(px)
    if y < getHeight(picture)-1 and x < getWidth(picture)-1:
      sum = getRed(px)+getGreen(px)+getBlue(px)
      botrt = getPixel(picture,x+1,y+1)
      sum2 = getRed(botrt)+getGreen(botrt)+getBlue(botrt)
      diff = abs(sum2-sum)
      newcolor = makeColor(diff,diff,diff)
      setColor(px,newcolor)
    show(picture)
    
def EnlargeImageTopSection():
  #get the image and then make an empty image 
  file=pickAFile()
  canvas = makeEmptyPicture(2652,1396)
  canvas2 = makeEmptyPicture(2652,1396)
  src=makePicture(file)
  
  #Display the image in the empty image
  canvas = src
  show(canvas)
  #explore(canvas)
  
  #get pixels at source X
  sourceX = 782
  #paste horizontal pixels from pixel 500 to pixel 2000
  for targetX in range(100,2000):
    #get pixels at source Y
    sourceY = 292
    #paste vertical pixels from pixel 500 to pixel 200
    for targetY in range(100,1000):
      srcpx = getPixel(src,int(sourceX),int(sourceY))
      color = getColor(srcpx)
      setColor(getPixel(canvas2,targetX,targetY), color)
      sourceY = sourceY + 0.75
    sourceX = sourceX + 0.75
  
  repaint(canvas2)
  return canvas

def EnlargeImageBottomSection():
  #get the image and then make an empty image 
  file=pickAFile()
  canvas = makeEmptyPicture(2652,1396)
  canvas2 = makeEmptyPicture(2652,1396)
  src=makePicture(file)
  
  #Display the image in the empty image
  canvas = src
  show(canvas2)
  #explore(canvas)
  
  #get pixels at source X
  sourceX = 160
  #paste horizontal pixels from pixel 500 to pixel 2000
  for targetX in range(100,2000):
    #get pixels at source Y
    sourceY = 600
    #paste vertical pixels from pixel 500 to pixel 2000
    for targetY in range(100,1000):
      srcpx = getPixel(src,int(sourceX),int(sourceY))
      color = getColor(srcpx)
      setColor(getPixel(canvas2,targetX,targetY), color)
      sourceY = sourceY + 0.6
    sourceX = sourceX + 0.6
  repaint(canvas2)
  return canvas




def picture2():
 pic1=makePicture(pickAFile())
 pic2=makePicture(pickAFile())
 overlay2(pic1,pic2)

def overlay2(pic1,pic2):
  for pixel in pic2.getPixels():
    x = getX(pixel)
    y = getY(pixel)
    color = getColor(pixel)
    target = getPixelAt(pic1, x, y) 
    setColor(target, color)
  repaint(pic1)




def scaleUp():   
  file = pickAFile()
  source = makePicture(file)
  target = makeEmptyPicture(getWidth(source)*2, getHeight(source)*2)
  sourceY = 0
  for targetY in range (0, getHeight(source)*2):
    sourceX = 0
    for targetX in range (0, getWidth(source)*2):
        color = getColor(getPixel(source, int(sourceX), int(sourceY)))
        setColor(getPixel(target, targetX, targetY), color)
        sourceX = sourceX + 0.5
    sourceY = sourceY + 0.5
    if targetY % 20 == 0:
        repaint(target)  


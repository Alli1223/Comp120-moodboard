  startX = 100
  endX = input("enter the end X ammout of pixels in image: ")
  startY = 0
  endY = input("enter the end Y ammout of pixels in image: ")
  lightred = red
  file=pickAFile()
  picture=makePicture(file)
  for px in getPixels(picture):
    x = getX(px)
    y = getY(px)
    if(startX <= x <= endX) and (startY <= y <=endY):
  
  
      color = getColor(px)
      if distance(color,lightred)<150.0:
        r=getRed(px)/10
        b=getBlue(px)*0.2
        g=getGreen(px)*0.2
        setColor(px,makeColor(r,g,b))
  show(picture)
  return picture






def colourdistance():
  
  color1 = pickAColor()
  color2 = pickAColor()
  
  red1 = color1.getRed()
  red2 = color2.getRed()
  green1 = color1.getGreen()
  green2 = color2.getGreen()
  blue1 = color1.getBlue()
  blue2 = color2.getBlue()
  
  Distance = sqrt(pow(red1 - red2, 2) + pow(green1 - green2, 2) + pow(blue1 - blue2, 2))
  print Distance

